<!DOCTYPE html>
<html>
<head>
	<title><%= h(yield(:title) || "Freshbnb") %></title>
	<%= stylesheet_link_tag "application" %>
	<%= stylesheet_link_tag "bootstrap" %>
	<%= javascript_include_tag "jquery-2.1.1" %>
	<%= javascript_include_tag "bootstrap" %>
	<%= yield(:head) %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">   
    <div class="navbar-inner">
      <div class="container">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand" href=<%= home_path %>>Freshbnb</a>
        <div class="nav-collapse collapse">
        	<div class="col-sm-3 col-md-3 pull-left">
		        <form class="navbar-form" role="search">
			        <div class="input-group">
			            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
		        	</div>
		        </form>
	        </div>
          <ul class="nav">
          	<li><%= link_to "Browse", listings_path %></li>
            <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
              <ul class="dropdown-menu">
              	<li><%= link_to "Your Listings", listings_user_path(current_user.id)%></li>
                <li><%= link_to "Your Reservations", reservations_path %></li>
                <li class="divider"></li>
								<li><%= link_to "Account", account_path %></li>
								<li><%= link_to "Edit Profile", edit_account_path %></li>
								<li><%= link_to "Logout", logout_path %></li>
              </ul>
            </li>
						<% else %>
						<li><%= link_to "Register", new_user_path %></li>
						<li><%= link_to "Login", login_path %></li>
						<% end %>
						<li><%= link_to "List Your Space", new_listing_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div><!-- /.container -->
    </div><!-- /.navabar-inner -->
	</div> <!-- /.navbar -->

	<div id="page" class="container">
		<% flash.each do |name, msg| %>
			<%= content_tag(:div,msg,:id=> "flash_#{name}") %>
		<% end %>
		<%= yield %>
		<footer>
			<p>&copy; Freshbnb 2013</p>
		</footer>
	</div> <!--/.container-->


</body>

</html>
